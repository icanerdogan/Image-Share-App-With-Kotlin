<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ellipse_1"
        android:layout_width="393dp"
        android:layout_height="wrap_content"
        android:background="@drawable/ellipse1"
        android:layout_gravity="center"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_marginTop="-60dp"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins_thin"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create your new account"
        android:textSize="16sp"
        android:layout_marginTop="-10dp"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins_light" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/nameET"
        android:layout_width="300dp"
        android:inputType="text"
        android:layout_height="46dp"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:background="@drawable/rectangle_for_entery_buttoms"
        android:padding="10dp"
        android:hint="Name" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/emailET"
        android:inputType="textEmailAddress"
        android:layout_width="300dp"
        android:layout_height="46dp"
        android:layout_marginTop="8dp"
        android:layout_gravity="center"
        android:background="@drawable/rectangle_for_entery_buttoms"
        android:padding="10dp"
        android:hint="E-mail" />

    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/spinnerCity"
        android:layout_width="300dp"
        android:layout_height="46dp"
        android:layout_marginTop="8dp"
        android:layout_gravity="center"
        android:background="@drawable/rectangle_for_entery_buttoms"
        android:padding="10dp" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/passwordEt"
        android:inputType="textPassword"
        android:layout_width="300dp"
        android:layout_height="46dp"
        android:layout_marginTop="8dp"
        android:layout_gravity="center"
        android:background="@drawable/rectangle_for_entery_buttoms"
        android:padding="10dp"
        android:hint="Password" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/signUp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:background="@drawable/button_background"
        android:fontFamily="@font/poppins_thin"
        android:onClick="registerUser"
        android:text="Sign Up"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center">

        <ImageView
            android:layout_width="110dp"
            android:layout_height="1dp"
            android:background="@drawable/line"
            android:layout_marginTop="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OR"
            android:fontFamily="@font/poppins_thin"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:textSize="20dp"/>

        <ImageView
            android:layout_width="110dp"
            android:layout_height="1dp"
            android:background="@drawable/line"
            android:layout_marginTop="15dp"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/googleSingIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/google_icons"/>

        <ImageView
            android:id="@+id/facebookSingIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logos_facebook"
            android:layout_marginLeft="50dp"/>



    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have an Account?"
            android:fontFamily="@font/poppins_light"
            android:textSize="12dp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/logInTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  Log In"
            android:clickable="true"
            android:fontFamily="@font/poppins_thin"
            android:textColor="@color/green"
            android:textSize="12dp" />

    </LinearLayout>


</LinearLayout>