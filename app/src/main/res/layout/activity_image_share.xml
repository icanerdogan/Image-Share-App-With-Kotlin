<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ImageShareActivity"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:background="@color/white">

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload Product \nPage"
        android:fontFamily="@font/poppins_thin"
        android:textSize="30dp"
        android:layout_gravity="center"
        android:gravity="center"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageView"
        android:onClick="selectImage"
        android:layout_width="206dp"
        android:layout_height="213dp"
        android:src="@drawable/upload_image_icon"
        android:layout_gravity="center"
        android:layout_margin="10dp" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/productNameET"
        android:layout_width="300dp"
        android:layout_height="46dp"
        android:layout_gravity="center"
        android:background="@drawable/rectangle_for_entery_buttoms"
        android:hint="Product name"
        android:padding="10dp"
        android:fontFamily="@font/poppins_light"
        android:layout_margin="5dp"/>

    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/selectProductCategory"
        android:layout_width="300dp"
        android:layout_height="46dp"
        android:layout_gravity="center"
        android:background="@drawable/rectangle_for_entery_buttoms"
        android:hint="Select Product Category"
        android:padding="10dp"
        android:fontFamily="@font/poppins_light"
        android:layout_margin="5dp"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/productPrice"
        android:layout_width="300dp"
        android:layout_height="46dp"
        android:inputType="numberDecimal"
        android:layout_gravity="center"
        android:background="@drawable/rectangle_for_entery_buttoms"
        android:hint="Product price"
        android:padding="10dp"
        android:fontFamily="@font/poppins_light"
        android:layout_margin="5dp"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/commentPT"
        android:inputType="text"
        android:layout_width="300dp"
        android:layout_height="46dp"
        android:layout_gravity="center"
        android:background="@drawable/rectangle_for_entery_buttoms"
        android:hint="Enter your comment"
        android:padding="10dp"
        android:fontFamily="@font/poppins_light"
        android:layout_margin="5dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/imageShareBtn"
        android:onClick="share"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:text="Upload"
        android:fontFamily="@font/poppins_thin"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="20dp" />


</LinearLayout>